<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffddff"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AndroidSQLite" >

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="学生成绩管理系统"
        android:textSize="30sp" />

    <Button
        android:id="@+id/m_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView1"
        android:layout_alignRight="@+id/textView1"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="30dp"
        android:text="增加" />

    <Button
        android:id="@+id/m_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/m_insert"
        android:layout_alignRight="@+id/m_insert"
        android:layout_below="@+id/m_insert"
        android:layout_marginTop="26dp"
        android:text="删除" />

    <Button
        android:id="@+id/m_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/m_delete"
        android:layout_alignRight="@+id/m_delete"
        android:layout_below="@+id/m_delete"
        android:layout_marginTop="31dp"
        android:text="修改" />

    <Button
        android:id="@+id/m_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/m_set"
        android:layout_alignRight="@+id/m_set"
        android:layout_below="@+id/m_set"
        android:layout_marginTop="35dp"
        android:text="查找" />

</RelativeLayout>