<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
 <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="62dp"
        android:text="成绩信息"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textSize="40dp" />

    <EditText
        android:id="@+id/g_s_Snum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/textView2"
        android:layout_alignBottom="@+id/textView2"
        android:layout_toRightOf="@+id/textView2"
        android:inputType="number"
        android:ems="10" />

    <EditText
        android:id="@+id/g_s_Cnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/textView3"
        android:inputType="number"
        android:ems="10" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/g_s_Snum"
        android:text="成    绩"
        android:textSize="30dp" />

    <EditText
        android:id="@+id/g_s_Score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/textView4"
        android:layout_alignParentRight="true"
        android:inputType="number"
        android:ems="10" />

    <Button
        android:id="@+id/g_set"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/g_s_Score"
        android:layout_below="@+id/g_s_Score"
        android:layout_marginTop="38dp"
        android:text="修改" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="36dp"
        android:layout_toLeftOf="@+id/g_s_Cnum"
        android:text="学    号"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/textView4"
        android:layout_below="@+id/g_s_Snum"
        android:layout_marginTop="25dp"
        android:text="课程号"
        android:textSize="30dp" />
    
</RelativeLayout>
